{
    "manifest_version": 3,
    "name": "NeoAtlantis Slate Browser Integration",
    "description": "Browser side connector to NeoAtlantis Slate, a password protection module.",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "action": {
        "default_title": "NeoAtlantis Slate"
    }
}
